{
  "$schema": "node_modules/wrangler/config-schema.json",
  "main": ".open-next/worker.js",
  "name": "soni-cms",
  "compatibility_date": "2025-08-15",
  "compatibility_flags": [
    // Enable Node.js API
    // see https://developers.cloudflare.com/workers/configuration/compatibility-flags/#nodejs-compatibility-flag
    "nodejs_compat",
    // Allow to fetch URLs in your app
    // see https://developers.cloudflare.com/workers/configuration/compatibility-flags/#global-fetch-strictly-public
    "global_fetch_strictly_public",
  ],
  "assets": {
    "directory": ".open-next/assets",
    "binding": "ASSETS",
  },
  "d1_databases": [
    {
      "binding": "D1",
      "database_id": "67ad713e-1d5e-42a9-8918-9e77b689c0c3",
      "database_name": "soni_blog_db",
      "remote": true,
    },
  ],
  "services": [
    // The service should match the "name" of your worker
    // {
    //   "binding": "WORKER_SELF_REFERENCE",
    //   "service": "my-app"
    // },
  ],
  "r2_buckets": [
    {
      "binding": "R2",
      "bucket_name": "soni-blog-assets",
      "preview_bucket_name": "soni-blog-assets",
    },
    // Create a R2 binding with the binding name "NEXT_INC_CACHE_R2_BUCKET"
    // {
    //   "binding": "NEXT_INC_CACHE_R2_BUCKET",
    //   "bucket_name": "<BUCKET_NAME>",
    // },
  ],
  // Cron trigger for scheduled publishing (every 10 minutes)
  "triggers": {
    "crons": ["*/10 * * * *"],
  },
  // Vectorize for semantic search
  "vectorize": [
    {
      "binding": "VECTORIZE",
      "index_name": "transmissions-embeddings",
      "remote": true,
    },
  ],
  // Workers AI for generating embeddings
  "ai": {
    "binding": "AI",
  },
  "observability": {
    "enabled": true,
  },
  // Routes for soninewmedia.com integration (Option A: Path-Based Routing)
  // These routes serve /transmissions/*, /admin/*, and /api/* from this Worker
  // while the main site (Vite SPA) handles all other paths
  "routes": [
    {
      "pattern": "soninewmedia.com/transmissions/*",
      "zone_name": "soninewmedia.com",
    },
    {
      "pattern": "soninewmedia.com/admin/*",
      "zone_name": "soninewmedia.com",
    },
    {
      "pattern": "soninewmedia.com/api/*",
      "zone_name": "soninewmedia.com",
    },
    {
      "pattern": "www.soninewmedia.com/transmissions/*",
      "zone_name": "soninewmedia.com",
    },
    {
      "pattern": "www.soninewmedia.com/admin/*",
      "zone_name": "soninewmedia.com",
    },
    {
      "pattern": "www.soninewmedia.com/api/*",
      "zone_name": "soninewmedia.com",
    },
  ],
  // Here's how to configure an additional environment
  // It can be deployed with `CLOUDFLARE_ENV=staging pnpm run deploy`
  // "env": {
  //   "staging": {
  //     "name": "my-app-staging",
